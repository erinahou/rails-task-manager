<h1><%= @task.title %></h1>
<p><%= @task.details %></p>

<% if @task.completed %>
  <p><%= "This tasks is completed" %></p>
<% else %>
  <p><%= "This tasks is NOT completed" %></p>
<% end %>

<button><%= link_to 'Back to list',  tasks_path%></button>
<button><%= link_to 'Edit this task', edit_path%></button>

<%= link_to 'Delete this task', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
